<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.Toolbar
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:background="@color/app_primary_color_light"
    android:id="@+id/overview_appbar"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">
    <RelativeLayout
        android:id="@+id/overview_appbar_relative_lo"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/supplier_homepage_overview_hi_supplier_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:text="@string/hi_supplier"/>

        <ImageView
            android:id="@+id/supplier_homepage_overview_waving_hand_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="7dp"
            android:layout_toEndOf="@id/supplier_homepage_overview_hi_supplier_tv"
            android:src="@drawable/ic_waving_hand_icon"/>

        <ImageView
            android:id="@+id/supplier_homepage_overview_notification_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="20dp"
            android:layout_alignParentEnd="true"
            android:src="@drawable/ic_notification_icon"/>

        <ImageView
            android:id="@+id/supplier_homepage_overview_cart_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="18dp"
            android:layout_marginEnd="60dp"
            android:src="@drawable/ic_akar_icons_cart"
            android:visibility="invisible" />

        <androidx.cardview.widget.CardView
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_marginTop="17dp"
            android:layout_alignEnd="@+id/supplier_homepage_overview_notification_iv"
            app:cardBackgroundColor="#ffffff"
            app:cardCornerRadius="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="0dp"
                android:text="10"
                android:textAlignment="center"
                android:textColor="#ff00cc"
                android:textSize="8sp" />


        </androidx.cardview.widget.CardView>


    </RelativeLayout>
</androidx.appcompat.widget.Toolbar>