<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="11dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:cardElevation="4dp"
        app:cardUseCompatPadding="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/total_supplies_made_supplier_itemview_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/consumer_profile_layout_imageview"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="0dp"
                android:layout_toEndOf="@id/consumer_profile_layout_imageview"
                android:fontFamily="@font/manrope_bold"
                android:text="TextView"
                android:textColor="@color/all_text_color"
                android:textFontWeight="700"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/total_supplies_made_supplier_itemview_address_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/total_supplies_made_supplier_itemview_name_tv"
                android:layout_alignLeft="@+id/total_supplies_made_supplier_itemview_name_tv"
                android:layout_toEndOf="@id/consumer_profile_layout_imageview"
                android:fontFamily="@font/manrope_medium"
                android:text="TextView"
                android:textColor="@color/all_text_color"
                android:textSize="15sp"
                android:textFontWeight="400" />

            <androidx.constraintlayout.utils.widget.ImageFilterView
                android:id="@+id/consumer_profile_layout_imageview"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="5dp"
                android:background="@color/white"
                android:padding="5dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:roundPercent="1"
                app:srcCompat="@drawable/man_pic" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="25dp"
                android:src="@drawable/ic_baseline_navigate_next_24" />
        </RelativeLayout>
</androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>