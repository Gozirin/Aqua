<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".core.authentication.ConsumerChangePasswordScreenFragment">


    <ImageView
        android:id="@+id/change_password_screen_imageButton1"
        android:layout_width="37dp"
        android:layout_height="29dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="52dp"
        android:src="@drawable/ic_baseline_arrow_back_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/white" />

    <TextView
        android:id="@+id/change_password_screen_textView2"
        android:layout_width="54dp"
        android:layout_height="24dp"
        android:layout_marginTop="56dp"
        android:text="Back"
        android:textSize="15sp"
        android:textColor="@color/black"
        android:fontFamily="@font/manrope_light"
        app:layout_constraintStart_toEndOf="@+id/change_password_screen_imageButton1"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/change_password_screen_textView3"
        android:layout_width="188dp"
        android:layout_height="30dp"
        android:layout_marginTop="52dp"
        android:fontFamily="@font/manrope_bold"
        android:text="Settings"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.478"
        app:layout_constraintStart_toEndOf="@+id/change_password_screen_textView2"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/change_password_screen_textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="28dp"
        android:fontFamily="@font/manrope_bold"
        android:text="Change password"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/change_password_screen_textView3"
        app:layout_constraintHorizontal_bias="0.132"
        app:layout_constraintStart_toStartOf="@+id/change_password_screen_imageButton1"
        app:layout_constraintTop_toBottomOf="@+id/change_password_screen_textView3" />

    <TextView
        android:id="@+id/change_password_screen_textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/manrope_light"
        android:text="Current Password"
        android:textColor="@color/black"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="@+id/change_password_screen_textView4"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/change_password_screen_textView4"
        app:layout_constraintTop_toBottomOf="@+id/change_password_screen_textView4" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/change_password_screen_textInputLayout1"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:background="@drawable/shapes"
        android:padding="1dp"
        app:hintEnabled="false"
        app:helperText=" 0-8 characters"
        app:layout_constraintEnd_toEndOf="@+id/change_password_screen_textView5"
        app:layout_constraintStart_toStartOf="@+id/change_password_screen_textView5"
        app:layout_constraintTop_toBottomOf="@+id/change_password_screen_textView5"
        app:passwordToggleEnabled="true">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shapes"
            android:enabled="true"
            android:hint="Current password"
            app:passwordToggleEnabled="true" />
    </com.google.android.material.textfield.TextInputLayout>


    <TextView
        android:id="@+id/change_password_screen_textView7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/manrope_light"
        android:text="New Password"
        android:textColor="@color/black"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="@+id/change_password_screen_textInputLayout1"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/change_password_screen_textInputLayout1"
        app:layout_constraintTop_toBottomOf="@+id/change_password_screen_textInputLayout1" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:padding="1dp"
        app:hintEnabled="false"
        app:helperTextEnabled="true"
        app:helperText="0-8 characters"
        android:background="@drawable/shapes"
        app:layout_constraintEnd_toEndOf="@+id/change_password_screen_textView7"
        app:layout_constraintStart_toStartOf="@+id/change_password_screen_textView7"
        app:layout_constraintTop_toBottomOf="@+id/change_password_screen_textView7"
        app:passwordToggleEnabled="true">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:enabled="true"
            android:hint="New password" />
    </com.google.android.material.textfield.TextInputLayout>


    <TextView
        android:id="@+id/change_password_screen_textView8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/manrope_light"
        android:text="Confirm password"
        android:textColor="@color/black"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="@+id/textInputLayout2"
        app:layout_constraintHorizontal_bias="0.797"
        app:layout_constraintStart_toStartOf="@+id/textInputLayout2"
        app:layout_constraintTop_toBottomOf="@+id/textInputLayout2" />

    <com.google.android.material.textfield.TextInputLayout
         android:id="@+id/textInputLayout4"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_marginHorizontal="16dp"
         android:layout_marginTop="5dp"
         android:padding="1dp"
         app:hintEnabled="false"
        app:helperText="0-8 characters"
         android:background="@drawable/shapes"
         app:layout_constraintEnd_toEndOf="@+id/change_password_screen_textView8"
         app:layout_constraintStart_toStartOf="@+id/change_password_screen_textView8"
         app:layout_constraintTop_toBottomOf="@+id/change_password_screen_textView8"
         app:passwordToggleEnabled="true">

   <com.google.android.material.textfield.TextInputEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:hint="confirm password" />
   </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/change_password_screen_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="17dp"
        android:layout_marginTop="24dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:text="Save"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/textInputLayout4"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/textInputLayout4"
        app:layout_constraintTop_toBottomOf="@+id/textInputLayout4"/>

</androidx.constraintlayout.widget.ConstraintLayout>





















